#include <ISEN.h>
#include <LabIsen-2009.h>
#include <ISL12026.h>
#include <MCP23X08.h>
#include <LiquidCrystal.h>
#include <Wire.h>
IOstd io;
const byte PinStart = 2;

bool state= false;
int centieme=0;
int seconde=0;
int minute=0;
int heure=0;
ISENLiquidCrystal lcd;
void setup() {
  pinMode(PinStart, INPUT_PULLUP);
  attachInterrupt(digitalPinToInterrupt(2), resetc, RISING);
  lcd.begin(16,2);
  lcd.clear();
  lcd.setCursor(0,0);
  lcd.print(heure);
  lcd.print(":");
  lcd.print(minute);
  lcd.print(":");
  lcd.print(seconde);
  lcd.print(":");
  lcd.print(centieme);
}
void loop() {
 while (io.digitalRead(12)==LOW)
 {
 chrono();
 lcd.clear();
 lcd.setCursor(0,0);
 lcd.print(heure);
 lcd.print(":");
 lcd.print(minute);
 lcd.print(":");
 lcd.print(seconde);
 lcd.print(":");
 lcd.print(centieme);
 delay(10);
 }
}
void chrono()
{
  if (centieme<99)
  {
    centieme++;
  }
  else
  {
    centieme=0;
    if (seconde<59)
  {
    seconde++;
  }
  else 
  {
    seconde=0;
    if (minute<59)
    {
    minute++;
    }
    else
    {
    minute=0;
    heure++;
    }
  }
  }
}
void resetc()
{
  heure=0;
  minute=0;
  seconde=0;
  centieme=0;
  lcd.clear();
  lcd.setCursor(0,0);
  lcd.print(heure);
  lcd.print(":");
  lcd.print(minute);
  lcd.print(":");
  lcd.print(seconde);
  lcd.print(":");
  lcd.print(centieme);
}
