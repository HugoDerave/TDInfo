#include <stdio.h>
#include <stdlib.h>
#include <time.h>
#include <stdbool.h>
#define Tab_Size 10000
int tab[Tab_Size];
bool flag = false;
void testFlag()
{
	int ordonne = 0,m=0;
	while (tab[m] >= tab[m + 1])
	{
		m++;
	}
		if (ordonne == 99)
		{
			flag = true;
		}
}
int main()
{
	srand((const)time(NULL));
	int k = 0;
	for (int i = 0; i < Tab_Size; i++)
	{
		tab[i] = rand() % 10000;
	}
	for (int j = 0; j <= Tab_Size; j++)
	{
		if(flag==false)
		{
			int k = 0;
			while (k < Tab_Size - j)
			{
				if (tab[k] < tab[k + 1])
				{
					int tmp;
					tmp = tab[k];
					tab[k] = tab[k + 1];
					tab[k + 1] = tmp;
				}
				k++;
			}
			testFlag();
		}
	}
	for (int l = 0; l < Tab_Size; l++)
	{
		printf("|%4d|", tab[l]);
	}
	system("pause");
	return(EXIT_SUCCESS);
}
